{
    "compilerOptions": {
        "baseUrl": ".",
        "strict": true,
        "target": "ES6",
        "module": "ESNext",
        "moduleResolution": "node",
        "importHelpers": true,
        "isolatedModules": true,
        "lib": ["es2024", "dom"],
        "rootDir": "src",
        "outDir": "dist",
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "noImplicitOverride": true,
        "noPropertyAccessFromIndexSignature": true,
        "noFallthroughCasesInSwitch": true
    },
    "include": ["src/**/*"]
}